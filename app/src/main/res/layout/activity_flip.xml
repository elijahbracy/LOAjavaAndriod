<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#302e2b"
    tools:context=".FlipActivity">

    <Button
        android:id="@+id/headsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="heads"
        android:text="Heads"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tailsBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintBottom_toBottomOf="@+id/tailsBtn"
        app:layout_constraintTop_toTopOf="@+id/tailsBtn"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/tailsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tails"
        app:layout_constraintStart_toEndOf="@+id/headsBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>